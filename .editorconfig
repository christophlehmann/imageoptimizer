# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# JSON-Files
[*.json]
indent_style = tab

[composer.json]
indent_style = space

# ReST files
[{*.rst,*.rst.txt}]
indent_size = 4
max_line_length = 80

# MD-Files
[*.md]
indent_size = 4
max_line_length = 80

# YAML-Files
[{*.yml,*.yaml}]
indent_size = 2

# XLF-Files
[*.xlf]
indent_style = tab
